<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:text="Logout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/weather"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="50dp"
        android:contentDescription="weather"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/weather" />

    <ImageView
        android:id="@+id/imageTextRecognition"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="50dp"
        android:contentDescription="Text Recognition"
        android:src="@drawable/text"
        app:layout_constraintStart_toEndOf="@+id/weather"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivFlower"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="92dp"
        android:contentDescription="Flower Recognition"
        android:src="@drawable/flower"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivObject" />

    <ImageView
        android:id="@+id/ivObject"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="88dp"
        android:contentDescription="Object Detection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weather"
        app:srcCompat="@drawable/object" />

    <ImageView
        android:id="@+id/ivPose"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="88dp"
        android:contentDescription="Pose Detection"
        app:layout_constraintStart_toEndOf="@+id/ivObject"
        app:layout_constraintTop_toBottomOf="@+id/imageTextRecognition"
        app:srcCompat="@drawable/pose" />

    <ImageView
        android:id="@+id/ivMessage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="92dp"
        app:layout_constraintStart_toEndOf="@+id/ivFlower"
        app:layout_constraintTop_toBottomOf="@+id/ivPose"
        app:srcCompat="@drawable/forum" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="weather"
        app:layout_constraintEnd_toEndOf="@+id/weather"
        app:layout_constraintStart_toStartOf="@+id/weather"
        app:layout_constraintTop_toBottomOf="@+id/weather" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Image to Text "
        app:layout_constraintEnd_toEndOf="@+id/imageTextRecognition"
        app:layout_constraintHorizontal_bias="0.636"
        app:layout_constraintStart_toStartOf="@+id/imageTextRecognition"
        app:layout_constraintTop_toBottomOf="@+id/imageTextRecognition" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="4dp"
        android:text="Object "
        app:layout_constraintEnd_toEndOf="@+id/ivObject"
        app:layout_constraintHorizontal_bias="0.744"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivObject" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Pose "
        app:layout_constraintEnd_toEndOf="@+id/ivPose"
        app:layout_constraintStart_toStartOf="@+id/ivPose"
        app:layout_constraintTop_toBottomOf="@+id/ivPose" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:text="Flower "
        app:layout_constraintEnd_toEndOf="@+id/ivFlower"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/ivFlower"
        app:layout_constraintTop_toBottomOf="@+id/ivFlower" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="App Forum "
        app:layout_constraintEnd_toEndOf="@+id/ivMessage"
        app:layout_constraintStart_toStartOf="@+id/ivMessage"
        app:layout_constraintTop_toBottomOf="@+id/ivMessage" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recognition"
        app:layout_constraintEnd_toEndOf="@+id/textView5"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detection"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detection"
        app:layout_constraintEnd_toEndOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

</androidx.constraintlayout.widget.ConstraintLayout>